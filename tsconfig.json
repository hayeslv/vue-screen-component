{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "declaration": true,
    "declarationDir": "./",
    "outDir": "build",
    "typeRoots": [
      "node_modules/@types",
      "@types"
    ]
  },
  "include": [
    "packages",
    "typings/shims-vue.d.ts",
  ],
  "exclude": ["node_modules", "build", "dist", "example", "rollup.config.ts"]
}
