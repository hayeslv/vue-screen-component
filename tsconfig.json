{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "baseUrl": "./",
    "useDefineForClassFields": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client", "node"],
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": [
    "examples/**/*.ts",
    "examples/**/*.vue",
    "tests/**/*.ts",
    "packages/**/*.ts",
    "packages/**/*.vue",
    "typings/shims-vue.d.ts",
  ],
  "exclude": ["node_modules"]
  // "references": [{ "path": "./tsconfig.node.json" }]
}
